{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": { "type": "title", "settings": {} },
        "price": { "type": "price", "settings": {} },
        "variant_picker": {
          "type": "variant_picker",
          "settings": { "picker_type": "button", "swatch_shape": "circle" }
        },
        "quantity_selector": { "type": "quantity_selector", "settings": {} },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "share": { "type": "share", "settings": { "share_label": "Share" } },
        "complementary": { "type": "complementary", "settings": {} }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "share",
        "complementary"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "scheme-1",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "stacked",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "product-tabs": {
      "type": "product-tabs",
      "settings": {
        "description_tab_label": "Description",
        "reviews_tab_label": "Reviews",
        "show_reviews_count": true,
        "reviews_count": 0,
        "reviews_placeholder_title": "Customer Reviews",
        "reviews_placeholder_text": "No reviews yet. Be the first to review this product!",
        "show_review_button": true,
        "review_button_text": "Write a Review"
      },
      "blocks": {
        "care_instructions": {
          "type": "custom_tab",
          "settings": {
            "tab_label": "Care Instructions",
            "tab_content": "<p>Care instructions will be added here based on product type.</p>"
          }
        },
        "shipping_returns": {
          "type": "custom_tab", 
          "settings": {
            "tab_label": "Shipping & Returns",
            "tab_content": "<p><strong>Shipping:</strong> Free shipping on orders over $50.<br><strong>Returns:</strong> 30-day return policy.</p>"
          }
        }
      },
      "block_order": ["care_instructions", "shipping_returns"]
    },
    "product-review-form": {
      "type": "product-reviews-form",
      "settings": {
        "form_title": "Write a Review",
        "success_message": "Thank you for your review! It will be published after moderation."
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": ["main", "product-tabs", "product-review-form", "product-recommendations"]
}