{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {}
        },
        "price": {
          "type": "price",
          "settings": {}
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button",
            "swatch_shape": "circle"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {}
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        },
        "product_tabs": {
          "type": "product_tabs",
          "settings": {
            "description_tab_label": "Description",
            "features_tab_label": "Product Details",
            "reviews_tab_label": "Reviews",
            "show_reviews_count": true,
            "reviews_count": 1,
            "reviews_content": "",
            "reviews_placeholder_title": "Customer Reviews",
            "reviews_placeholder_text": "No reviews yet. Be the first to review this product!",
            "show_review_button": true,
            "review_button_text": "Write a Review",
            "use_vitals_reviews": true,
            "no_description_text": "No description available for this product.",
            "features_content": "High Quality Materials|Durable Construction|Easy to Use|Eco-Friendly|Satisfaction Guaranteed",
            "features_placeholder_title": "Key Features",
            "features_placeholder_text": "Product features will be displayed here.",
            "custom_feature_1_title": "",
            "custom_feature_1_description": "",
            "custom_feature_2_title": "",
            "custom_feature_2_description": "",
            "custom_feature_3_title": "",
            "custom_feature_3_description": "",
            "custom_feature_4_title": "",
            "custom_feature_4_description": "",
            "custom_feature_5_title": "",
            "custom_feature_5_description": ""
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "share",
        "product_tabs"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "scheme-1",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "thumbnail_slider",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "show",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "product-documents": {
      "type": "product-documents",
      "settings": {
        "heading": "Product Documents",
        "description": "",
        "layout": "grid",
        "show_descriptions": true,
        "button_text": "Download",
        "button_style": "primary",
        "show_when_empty": false,
        "empty_message": "No documents available for this product.",
        "padding_top": 36,
        "padding_bottom": 36
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "product-documents",
    "related-products"
  ]
}
