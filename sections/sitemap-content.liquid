      "id": "main_menu_title",
      "label": "Main Menu Title",
      "default": "Main Navigation"
    },
    {
      "type": "header",
      "content": "Pages"
    },
    {
      "type": "checkbox",
      "id": "show_all_pages",
      "label": "Show All Pages",
      "default": true
    },
    {
      "type": "text",
      "id": "pages_title",
      "label": "Pages Section Title",
      "default": "All Pages"
    },
    {
      "type": "header",
      "content": "Collections"
    },
    {
      "type": "checkbox",
      "id": "show_collections",
      "label": "Show Collections",
      "default": true
    },
    {
      "type": "text",
      "id": "collections_title",
      "label": "Collections Section Title",
      "default": "Collections"
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "checkbox",
      "id": "show_products",
      "label": "Show Products",
      "default": false,
      "info": "Warning: This may create a very long page if you have many products"
    },
    {
      "type": "text",
      "id": "products_title",
      "label": "Products Section Title",
      "default": "Products"
    },
    {
      "type": "checkbox",
      "id": "group_by_category",
      "label": "Group Products by Category",
      "default": true
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 10,
      "max": 100,
      "step": 10,
      "label": "Product Limit",
      "default": 50
    },
    {
      "type": "header",
      "content": "Blog"
    },
    {
      "type": "checkbox",
      "id": "show_blogs",
      "label": "Show Blog Articles",
      "default": true
    },
    {
      "type": "text",
      "id": "blogs_title",
      "label": "Blog Section Title",
      "default": "Blog"
    },
    {
      "type": "range",
      "id": "article_limit",
      "min": 5,
      "max": 50,
      "step": 5,
      "label": "Articles per Blog Limit",
      "default": 20
    },
    {
      "type": "header",
      "content": "Footer Information"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Last updated:"
    },
    {
      "type": "checkbox",
      "id": "show_contact_info",
      "label": "Show Contact Information",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact Text",
      "default": "Questions? Contact us at"
    },
    {
      "type": "email",
      "id": "contact_email",
      "label": "Contact Email"
    }
  ],
  "blocks": [
    {
      "type": "custom_section",
      "name": "Custom Section",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section Title",
          "default": "Custom Section"
        },
        {
          "type": "richtext",
          "id": "section_description",
          "label": "Section Description"
        },
        {
          "type": "textarea",
          "id": "custom_links",
          "label": "Custom Links",
          "info": "Format: Title|URL, one per line. Example: About Us|/pages/about"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sitemap Content"
    }
  ]
}
{% endschema %}