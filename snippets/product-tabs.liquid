<!-- Simple Product Tabs -->
<div class="product-tabs-simple" {{ block.shopify_attributes }}>
  <style>
    .product-tabs-simple { margin: 2rem 0; }
    .tab-nav-simple { display: flex; border-bottom: 1px solid #ddd; margin-bottom: 1.5rem; }
    .tab-button-simple { background: none; border: none; padding: 1rem 1.5rem; cursor: pointer; font-size: 1.6rem; color: #666; border-bottom: 2px solid transparent; }
    .tab-button-simple.active { color: #000; border-bottom-color: #000; }
    .tab-panel-simple { display: none; }
    .tab-panel-simple.active { display: block; }
    .feature-item-simple { border: 1px solid #eee; margin-bottom: 1rem; border-radius: 4px; }
    .feature-toggle-simple { width: 100%; padding: 1rem; background: none; border: none; text-align: left; cursor: pointer; display: flex; justify-content: space-between; }
    .feature-content-simple { padding: 0 1rem 1rem; display: none; }
  </style>
  
  <div class="tab-nav-simple">
    <button class="tab-button-simple active" onclick="showTab('description')">Description</button>
    <button class="tab-button-simple" onclick="showTab('features')">Features</button>
  </div>
  
  <div id="tab-description" class="tab-panel-simple active">
    {%- if product.description != blank -%}
      {{ product.description }}
    {%- else -%}
      <p>No description available.</p>
    {%- endif -%}
  </div>
  
  <div id="tab-features" class="tab-panel-simple">
    {%- if product.metafields.custom.features != blank -%}
      {%- assign features_list = product.metafields.custom.features | split: '|' -%}
      {%- for feature in features_list -%}
        {%- assign feature_index = forloop.index -%}
        {%- assign feature_key = 'feature_' | append: feature_index -%}
        {%- assign feature_description = product.metafields.custom[feature_key] -%}
        
        <div class="feature-item-simple">
          <button class="feature-toggle-simple" onclick="toggleFeature(this)">
            <span>{{ feature | strip }}</span>
            <span>+</span>
          </button>
          <div class="feature-content-simple">
            {%- if feature_description != blank -%}
              <p>{{ feature_description }}</p>
            {%- else -%}
              <p>Premium quality feature designed for optimal performance.</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    {%- else -%}
      <ul>
        <li>High Quality Materials</li>
        <li>Durable Construction</li>
        <li>Easy to Use</li>
        <li>Professional Grade</li>
        <li>Satisfaction Guaranteed</li>
      </ul>
    {%- endif -%}
  </div>
  
  <script>
    function showTab(tabName) {
      // Hide all tabs
      document.querySelectorAll('.tab-panel-simple').forEach(panel => panel.classList.remove('active'));
      document.querySelectorAll('.tab-button-simple').forEach(btn => btn.classList.remove('active'));
      
      // Show selected tab
      document.getElementById('tab-' + tabName).classList.add('active');
      event.target.classList.add('active');
    }
    
    function toggleFeature(button) {
      const content = button.nextElementSibling;
      const icon = button.querySelector('span:last-child');
      
      if (content.style.display === 'block') {
        content.style.display = 'none';
        icon.textContent = '+';
      } else {
        content.style.display = 'block';
        icon.textContent = 'âˆ’';
      }
    }
  </script>
</div>